<%= link_to "Products", admin_products_path %>
<%= link_to "Root Admin", admin_dashboard_path %>
<h1>List of type products</h1>
<%= link_to 'Create new type product', new_admin_type_product_path %>
<div class="row row-cols-2 row-cols-md-auto">
  <% @type_products.each do |type| %>
    <div class="col mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= type.name %></h5>
          <%= link_to 'Edit', edit_admin_type_product_path(type), class: "btn btn-primary mr-2" %>
          <%= link_to 'Delete', admin_type_product_path(type), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

