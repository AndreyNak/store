<!DOCTYPE html>
<html>
  <head>
    <title>MyStore</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/ui-lightness/jquery-ui.css"/>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-warning"><%= alert %></p>
    <% end %>
    <div class="user-info d-flex flex-row">
      <div class="jumbotron">
        <% if user_signed_in? %>
          <div class="d-flex">
            <div class="mx-2"><%= "Welcome, #{current_user.name || current_user.email}" %></div>
            <div><%= "Role #{current_user.role.name}" %></div>
          </div>
          <%= button_to "Log out", destroy_user_session_path, data: { turbo_confirm: "Are you sure?" }, class: 'text', method: :delete %>
        <% else %>
          <%= link_to "Sign Up", new_user_registration_path%>
          <%= link_to "Log In", new_user_session_path %>
        <% end %>
      </div>
    </div>
    <%= yield %>
  </body>
</html>

<script>
  const alertElement = document.querySelector(".alert");

  // Прослушивание события "animationend"
  alertElement.addEventListener("animationend", () => {
    // Скрыть предупреждение после завершения анимации
    alertElement.style.display = "none";
  });

</script>
